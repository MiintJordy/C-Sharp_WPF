        xmlns:local="clr-namespace:WPF_Delegate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Command="{Binding Btn_Action}" Content="Action" HorizontalAlignment="Left" Margin="554,161,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Command="{Binding Btn_Func}" Content="Func" HorizontalAlignment="Left" Margin="554,221,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Command="{Binding Btn_Delegate}" Content="Delegate" HorizontalAlignment="Left" Margin="554,281,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Command="{Binding Btn_Predicate}" Content="Predicate" HorizontalAlignment="Left" Margin="554,336,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.037,0.743"/>

    </Grid>
</Window>
