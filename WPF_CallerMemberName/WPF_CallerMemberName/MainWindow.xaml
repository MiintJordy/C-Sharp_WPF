<Window x:Class="WPF_CallerMemberName.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_CallerMemberName"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Message}" VerticalAlignment="Top" Width="174" Height="34"/>
        <Button Command="{Binding Btn_Click}" Content="Change Message" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Width="174"/>

    </Grid>
</Window>
